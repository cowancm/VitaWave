@page "/visualizer"
@inject HttpClient Http

<ApexChart TItem="MyData"
           Title="Sample Data"
           Width="1000"
           Height="700">
    <ApexPointSeries TItem="MyData"
                     Items="Data"
                     Name="Net Profit"
                     SeriesType="SeriesType.Scatter"
                     XValue="e => e.Category"
                     YValue="e=> e.NetProfit" />
    <ApexPointSeries TItem="MyData"
                     Items="Data"
                     Name="Revenue"
                     SeriesType="SeriesType.Scatter"
                     XValue="e => e.Category"
                     YValue="e=> e.Revenue" />
</ApexChart>
    
@code {
    private List<MyData> Data { get; set; } = new();
    protected override void OnInitialized()
    {
        Data.Add(new MyData { Category = "-1", NetProfit = 12, Revenue = 33 });
        Data.Add(new MyData { Category = "0", NetProfit = 43, Revenue = 42 });
        Data.Add(new MyData { Category = "1", NetProfit = 112, Revenue = 23 });
    }

    public class MyData
    {
        public string Category { get; set; }
        public int NetProfit { get; set; }
        public int Revenue { get; set; }
    }
}
